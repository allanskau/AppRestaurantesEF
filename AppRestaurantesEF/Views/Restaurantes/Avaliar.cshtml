@model AppRestaurantesEF.Models.Restaurante

<h1>Avaliar Restaurante</h1>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.Label("Restaurante", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Label(Model.Nome)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Nota", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("SomaDasNotas")
            <!--Html.TextBoxFor(m => m.SomaDasNotas,
                                         new { class = "form-control", placeholder = "Nota do restaurante" }) -->
            @Html.ValidationMessageFor(m => m.SomaDasNotas, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Avaliar Restaurante" class="btn btn-success" />
            @Html.ActionLink("Cancelar", "Index")
        </div>
    </div>
</div>
}

<div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}