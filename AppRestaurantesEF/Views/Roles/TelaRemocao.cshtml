@{
    ViewBag.Title = "RemoverRole";
}

<h2>Remover Role</h2>

<!--                    action   conroller                -->   
@using (Html.BeginForm("RemoverPerfil", "Roles", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Usuário: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserName")
            </div>
        </div>
        <hr />

        
        <div class="form-group">
            @Html.Label("Selecione o perfil a remover", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Roles")
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Remover Perfil" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>